    "bumpp": "9.5.1",
    "eslint": "8.57.0",
    "eslint-config-next": "15.0.0-canary.115",
    "lint-staged": "15.2.9",
    "postcss": "8.4.41",
    "prettier": "3.3.3",
    "shadcn-ui": "0.8.0",
    "simple-git-hooks": "2.11.1",
    "tailwindcss": "3.4.10",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.7.1"
}
